<div class="header">
    <h1>
        <img class="logo" src="/assets/images/sportspal.png"> Sports Pal </h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="createGame" data-toggle="list" href="#list-create-game" role="tab"
                    aria-controls="create-game">Create Game</a>
                <a class="list-group-item list-group-item-action" id="yourGames" data-toggle="list" href="#list-your-games" role="tab" aria-controls="your-games">Your Games</a>
                <a class="list-group-item list-group-item-action" id="liveStats" data-toggle="list" href="#list-live-stats" role="tab" aria-controls="live-stats">Live Stats</a>
            </div>
        </div>
        <div class="col-md-6">
            <div id="create-game-form">
                <h2>Create Game</h2>
                <form>
                    <div class="form-group">
                        <label for="game-name">Name</label>
                        <input type="text" class="form-control" id="game-name" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="game-date">Choose Date</label>
                        <input type="date" class="form-control" id="game-date" placeholder="" data-pickdate="">
                    </div>
                    <div class="form-group">
                        <label for="game-venue">Venue</label>
                        <input type="text" class="form-control" id="game-venue" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="game-team">Team Size</label>
                        <select class="form-control" id="game-team">
                            <option>Choose</option>
                            <option>8</option>
                            <option>10</option>
                            <option>12</option>
                        </select>
                    </div>
                    <button type="button" id='create-game-button' class='btn btn-default'>Submit</button>
                </form>
            </div>
        </div>
    </div>

    <div class='row'>
        <div class="col-md-6">
            <table class="table table-hover">
                <thead id="table-your-games" class="thead-light">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Date</th>
                        <th scope="col">Venue</th>
                        <th scope="col">Team Size</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- table row and table data are dynamically created when there is a new game added --}}
                </tbody>
            </table>
        </div>
        <div class='col-md-6'>
            <div id="card-live-stats" class="card">
                <img class="card-img-top" src="https://dj0j0ofql4htg.cloudfront.net/cms2/image_manager/uploads/News/292212/7/default.jpg"
                    alt="Card image cap">
                <div id="live-stats" class="card-body">
                    <p id='live-stats-one' class="card-text-dark"></p>
                    <p id='live-stats-two' class="card-text-dark"></p>
                    <p id='live-stats-three' class="card-text-dark"></p>
                    <p id='live-stats-four' class="card-text-dark"></p>
                </div>
                <div class="card-footer">
                    <button id="close-button" type="button" class="btn btn-secondary" data-dismiss="card">Close</button>
                </div>
            </div>
        </div>
    </div>

    {{!--
    <div class="footer">
        sportspal 2018
    </div> --}}
</div>